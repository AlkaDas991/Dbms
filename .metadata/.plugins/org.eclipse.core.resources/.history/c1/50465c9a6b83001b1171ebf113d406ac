		PreparedStatement pst = con.preparestatement(sql);
		pst.setString(1,currPass);
		pst.setString(2,newPass);
		ResultSet rs = pst.executeQuery();                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
		if(rs.next()){
			response.sendRedirect("success.html");
		}
		else{
			response.sendRedirect("failure.html");
		}
	}
	catch(Exception e){}
%>